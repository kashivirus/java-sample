pipeline{
    agent any 
    stages{
        stage('Build Application'){
            steps {
                sh 'mvn -f java-tomcat-sample/pom.xml clean package'
            }
            post {
                success{
                    echo "Now Archieving  the artifacts..."
                    archiveArtifacts artifact:'**/*.war'
                }
            }
        stage('Deeploy in Stagging Environment'){
            build job:'Deploy_Application_Stagging_ENV'
        }
        }
    }
}